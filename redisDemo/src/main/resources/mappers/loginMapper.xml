<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.redisdemo.mapper.LoginMapper">
    <resultMap id="loginResultMap" type="LoginInTable">
      <id property="uId" column="u_id"></id>
      <result property="username" column="username"/>
      <result property="password" column="password"/>
      <result property="state" column="is_state"/>
      <result property="role" column="role"/>
      <result property="createTime" column="create_time"/>
      <result property="updateTime" column="update_time"/>
      <result property="lastLoginTime" column="last_login_time"/>
    </resultMap>
    <sql id="selectLoginInTableVo">
        select u_id,username,password,is_state,role,create_time,update_time,last_login_time from login_in_table
    </sql>
    <select id="findAccountById" parameterType="Long" resultMap="loginResultMap">
        <include refid="selectLoginInTableVo"></include>
        where u_id=#{uId}
    </select>
    <select id="queryAdmin" parameterType="LoginInTable" resultMap="loginResultMap">
        <include refid="selectLoginInTableVo"/>
        <where>
            <if test="uId!=null and uId!=0">u_id=#{uId}</if>
            <if test="username!=null and username!=''">and username=#{username}</if>
            <if test="state!=null">and is_state=#{state}</if>
            <if test="role!=null and role!=''">and role=#{role}</if>
        </where>
    </select>
    <update id="updateLastLogin" parameterType="String">
        update login_in_table set last_login_time=sysdate() where username=#{username}
    </update>
    <delete id="deleteLoginInTableById" parameterType="Long">
        delete from login_in_table where u_id=#{uId}
    </delete>
    <insert id="insertAccount" parameterType="LoginInTable" useGeneratedKeys="true" keyProperty="uId">
        insert into login_in_table(
        <if test="username!=null and username!=''">username,</if>
        <if test="password!=null and password!=''">password,</if>
        <if test="state!=null">is_state,</if>
        <if test="role!=null and role!=''">role,</if>
        create_time
        )values(
        <if test="username!=null and username!=''">#{username},</if>
        <if test="password!=null and password!=''">#{password},</if>
        <if test="state!=null">#{state},</if>
        <if test="role!=null and role!=''">#{role},</if>
        sysdate()
        )
    </insert>
    <update id="updateLoginInTable" parameterType="LoginInTable">
        update login_in_table
        <set>
            <if test="username!=null and username!=''">username=#{username},</if>
            <if test="password!=null and password!=''">password=#{password},</if>
            <if test="state!=null">is_state=#{state},</if>
            update_time=sysdate()
        </set>
        where u_id=#{uId}
    </update>

</mapper>